<div id="back-button">
  {{#link-to "feed" tagName="i" class="flaticon-left-arrow7" id="iback-button"}}
  {{/link-to}}
</div>

<div class="full-post">
  {{#if model.image}}
    <div class="lolipop full-post-img">
      <img src={{model.image}} class="image-content">
    </div>
  {{/if}}
  <div class="lolipop" id="full-post-bg-1"></div>
  <div class="lolipop" id="full-post-bg-2"></div>
  <div class="full-post-text">
    <h1>{{model.title}}</h1>
    <div id="full-post-tags">
      {{#each model.tags as |tag|}}
        <span class="label label-default">{{tag.name}}</span>&nbsp;
      {{/each}}
    </div>
    <p>
      {{model.text}}<br>
      {{model.comments.length}} Comments
    </p>
    <div class="clearfix"></div>
  </div>
  {{#each model.comments as |comment|}}
    <div class="lolipop comment">
      <i class="flaticon-blog1"/>{{comment.user.name}}
      <p>{{comment.message}}</p>
    </div>
  {{/each}}
</div>